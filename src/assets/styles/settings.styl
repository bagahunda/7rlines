body-color = #333333
accent-color = #ff0000
bg-color = #FBFBFD

html
  box-sizing border-box

*,
*:before,
*:after
  box-sizing inherit

body
  font-family "Open Sans", sans-serif
  color body-color
  background-color bg-color


:disabled, [disabled], [aria-disabled="true"]
  cursor not-allowed

.clearfix:after
    content ""
    display block
    clear both

a
  -webkit-text-decoration-skip: ink
  text-decoration-skip: ink

.svg-sprite
  display none

.title
  width 100%
  font-family "Merriweather"
  font-weight 400
  line-height 1.4

  span
    display inline-block
    position relative

    &::before
      content ''
      width calc(100% + 24px)
      height 20px
      position absolute
      left -16px
      bottom 0
      background-color #EAEAF2
      z-index -1

