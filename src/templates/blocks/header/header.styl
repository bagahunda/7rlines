.header
  padding 40px
  display flex
  flex-direction column
  justify-content center
  align-items center
  overflow hidden

  &__logo
    width 40vw
    margin-bottom 80px

  &__title
    font-size 50px

    +above(1200px)
      font-size 80px

    &:nth-child(3)
      margin-top 24px
      position relative
      left calc(100% / 6)

.bg
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  z-index -1
  opacity 0.4

  &__line
    width 1px
    background-color accent-color
    position absolute
    top 0
    left 20px
    width 1px
    height 100%

    &:first-child
      left 20px

      +above(1200px)
        left calc((100% - 1200px) / 2)

    &:nth-child(2)
      left calc(100% / 6)

      +above(1200px)
        left calc(((100% - 1200px) / 2) + 200px)

    &:nth-child(3)
      left calc((100% / 6) * 2)

      +above(1200px)
        left calc(((100% - 1200px) / 2) + 400px)

    &:nth-child(4)
      left calc((100% / 6) * 3)

      +above(1200px)
        left calc(((100% - 1200px) / 2) + 600px)

    &:nth-child(5)
      left calc((100% / 6) * 4)

      +above(1200px)
        left calc(((100% - 1200px) / 2) + 800px)

    &:nth-child(6)
      left calc((100% / 6) * 5)

      +above(1200px)
        left calc(((100% - 1200px) / 2) + 1000px)

    &:last-child
      left auto
      right 20px

      +above(1200px)
        right calc((100% - 1200px) / 2)
