.header
  padding 40px 0 0
  overflow hidden

  &__logo
    margin-bottom 40px

  &__info
    padding 40px 0
    position relative
    background-image url('../images/header.jpg')
    background-size cover
    background-position center
    background-repeat no-repeat
    color #fff

    .bg
      z-index: 1

      &__line
        background-color #fff

  &__titles
    position relative
    text-align center
    z-index 2

    +above(1200px)
      text-align left

    .title:nth-child(2)
      margin-top 40px

      +above(1200px)
        padding-left calc(100% / 6)

  &__text
    position relative
    z-index 2
    width 74%
    margin 40px auto 0
    font-family: Merriweather, sans-serif
    font-size 30px
    line-height 1.7

.bg
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  z-index -1
  opacity 0.4

  &__line
    width 1px
    background-color accent-color
    position absolute
    top 0
    left 20px
    width 1px
    height 100%
    animation scale 3s

    &:first-child
      left 20px

      +above(1200px)
        left calc((100% - 1200px) / 2)

    &:nth-child(2)
      left calc((100% - 40px) / 6 + 20px)

      +above(1200px)
        left calc(((100% - 1200px) / 2) + 200px)

    &:nth-child(3)
      left calc(((100% - 40px) / 6) * 2 + 20px)

      +above(1200px)
        left calc(((100% - 1200px) / 2) + 400px)

    &:nth-child(4)
      left calc(((100% - 40px) / 6) * 3 + 20px)

      +above(1200px)
        left calc(((100% - 1200px) / 2) + 600px)

    &:nth-child(5)
      left calc(((100% - 40px) / 6) * 4 + 20px)

      +above(1200px)
        left calc(((100% - 1200px) / 2) + 800px)

    &:nth-child(6)
      left calc(((100% - 40px) / 6) * 5 + 20px)

      +above(1200px)
        left calc(((100% - 1200px) / 2) + 1000px)

    &:last-child
      left auto
      right 20px

      +above(1200px)
        right calc((100% - 1200px) / 2)

@keyframes scale
  from
    transform-origin  top
    transform scaleY(0)
  to
    transform-origin  top
    transform scaleY(1)
